<Window x:Class="VKAUDIO.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Icon="../icon.ico"
        Title="Settings" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Margin="5">Папка для сохранения:</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="DirectoryTextBox" Margin="5"></TextBox>
                <Button Grid.Column="1" Margin="5" Click="Button_Click_1">Обзор</Button>
            </Grid>
        </StackPanel>
        <StackPanel  Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button HorizontalAlignment="Right" Margin="5" Width="50" Click="Button_Click">Ок</Button>
            <Button HorizontalAlignment="Right" Margin="5" Width="50" Click="ButtonBase_OnClick">Отмена</Button>
            
        </StackPanel>
        
        
    </Grid>
</Window>
